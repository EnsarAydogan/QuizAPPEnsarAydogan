<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/Top10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_margin="16dp"
        android:text="Top10 Trivia Titans"/>

    <ListView
        android:id="@+id/highscoreListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Top10" />

    <Button
        android:id="@+id/backToMenuButton"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"
        android:textSize="18sp"
        android:background="@color/darkred"
        android:layout_below="@id/highscoreListView"
        android:text="ZurÃ¼ck zum Hauptmenu" />

    <Button
        android:id="@+id/myscoreButton"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="200dp"
        android:textSize="18sp"
        android:background="@color/limegreen"
        android:layout_below="@id/highscoreListView"
        android:text="MyScore" />


    <TextView
        android:id="@+id/usernametext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp" />

</RelativeLayout>


